<% unless @current_user %>
	<ul>Пожалуйста, войдите.</ul>
	<ul>
		<li><%= link_to "Вход", login_path %></li>
		<li><%= link_to "Регистрация", register_path %></li>
	</ul>
<% else %>
	<ul>Привет, <%= @current_user.name %>!</ul>
	<ul>
		<% if @current_user.status == -1 %>
		<li><a href="#" class="status banned">Забанен</a></li>
		<% elsif @current_user.status == 0 %>
		<li><a href="#" class="unactivated">Неактивирован</a></li>
		<% elsif @current_user.status == 2 %>
		<li><a href="#" class="active">Модератор</a></li>
		<% elsif @current_user.status == 3 %>
		<li><a href="#" class="active">Админ</a></li>
		<% end %>
		<li><%= link_to "Профиль", user_profile_path %></li>
		<li><%= link_to "Выход", logout_path %></li>
	</ul>
<% end %>