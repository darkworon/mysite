<!DOCTYPE html>
<html>
<head>
  <title>mysite</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if notice %>
	<script type="text/javascript" charset="utf-8">
		$(function(){
			$.flash_notice("<%= notice %>", 8);
		});
	</script>
	<% end %>
	<% if flash[:error] %>
	<script type="text/javascript" charset="utf-8">
		$(function(){
			$.flash_error("<%= flash[:error] %>", 8);
		});
	</script>
	<% end %>
	<% if flash[:info] %>
	<script type="text/javascript" charset="utf-8">
		$(function(){
			$.flash_info("<%= flash[:info] %>", 8);
		});
	</script>
	<% end %>
	<% if flash[:alert] %>
	<script type="text/javascript" charset="utf-8">
		$(function(){
			$.flash_alert("<%= flash[:alert] %>", 8);
		});
	</script>
	<% end %>
	<script type="text/javascript" charset="utf-8">
			$('.unactivated').click(function(){
				$.flash_info('<%= link_to "нажмите тут...", home_path %>', 5);
				$.flash_info("Если ссылка не пришла,", 4.5);
				$.flash_info("Проверьте вашу почту и перейдите по ссылке.", 4);
			});
		});
	</script>
	<div class="header">
		<div class="head_1"></div>
		<div class="head_2">
			<div class="logo">
			<a href="/" class="main_logo">mysite</a>
			</div>
		</div>
		<div class="head_3">
			<div class="main_menu">
				<%= link_to "Главная", home_path, class: cp(home_path) %>
				<%= link_to "О нас", about_path, class: cp(about_path) %>
				<%= link_to "Файлы", uploads_path, class: cp(uploads_path) %>
				<a href="#">Элемент4</a>
				<a href="#">Элемент5</a>
				<a href="#">Элемент5</a>
				
			</div>
		</div>
		<div class="head_4">
			<div class="user_control_panel">
				<%= render 'layouts/user_panel' %>
			</div>
		</div>
	</div>
	<div class="body">
		<div class="flash">
		  </div>
		<div class="body_center">
			<div class="main_content"><%= yield %></div>
		</div>
	</div>
	<div class="footer">
		<span class="footer_content">
			Powered by WoRoN &copy; 2012
		</span>
		<span class="footer_content">
			Позже тут будет переключатель языков...
		</span>
	</div>
</body>
</html>
